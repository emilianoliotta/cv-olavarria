<h2 class="subtitulos">Contacto</h2>

<div class="container-fluid">

	<%= form_tag '/contact/enviar/', :method => :get do %>

		<div class="row" style="padding-top:1em">
	    <div class="col-xs-3 col-md-3"></div>
	    <div class="col-xs-6 col-md-6"><span class="campo-obligatorio">* Campo obligatorio</span><%= text_field_tag :name, params[:name], class:"form-control", :placeholder => "Nombre" %></div>
		</div>
		
		<div class="row" style="padding-top:1em">
		<div class="col-xs-3 col-md-3"></div>
		<div class="col-xs-6 col-md-6"><span class="campo-obligatorio">* Campo obligatorio</span><%= email_field_tag :email, params[:email], class:"form-control", :placeholder => "E-mail" %></div>
  		</div>
    	<div class="row" style="padding-top:1em">
    	<div class="col-xs-3 col-md-3"></div>
    	<div class="col-xs-6 col-md-6"><span class="campo-obligatorio">* Campo obligatorio</span><%= text_area_tag :message, params[:message], class:"form-control", :placeholder => "Mensaje" %></div>
  		</div>

    	<div class="row" style="padding-top:1em">
    	<div class="col-xs-3 col-md-3"></div>
    	<div class="col-xs-6 col-md-6"><%= submit_tag "Enviar", class:"btn btn-default" %></div>
    	</div>
	
		<div class="row" style="padding-top:1em">
    	<div class="col-xs-3 col-md-3"></div>
    	<div class="col-xs-6 col-md-6"><%= link_to "Inicio", welcome_index_path %></div>
    	</div>
    	
	<% end %>

</div>