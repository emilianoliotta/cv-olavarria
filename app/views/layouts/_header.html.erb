<header>
<nav class="navbar navbar-default navbar-fixed-top navbar-custom" role="navigation">
  <div class="container-fluid">
    
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#to-collapse">
        <span class="sr-only">Navegación</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/">
        <%= image_tag("logo-small.png", id: "logo") %>
        <div id="bestnid-logo-text">
          <div><span id="cv-title">Compra venta</span></div>
          <div><span id="cv-slogan">Olavarría</span></div>
        </div>
      </a>
    </div>
   
    <div class="collapse navbar-collapse nav-pills" id="to-collapse">
      <ul class="nav navbar-nav">

        <li id="bestnid-home"><a href="/" class="menu">Inicio</a></li>
        <li><a href="/contact/index" class="menu"><b>Contacto</b></a></li> 

      </ul>

      <%= form_tag welcome_index_path, :method => :get, class: "navbar-form navbar-right" do %>
        <%= text_field_tag :search, params[:search], class:"form-control", :placeholder => "Buscar productos" %>
        <%= submit_tag "Buscar", :name => nil, class:"btn btn-default" %>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>

          <li><p class="navbar-text text-ellipsis"><b><%= current_user.email %></b></p></li>

          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle negrita" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
              Mi cuenta<span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Ver perfil", welcome_index_path %></li>
              <li><%= link_to 'Editar perfil', edit_user_registration_path %></li>
              <li><%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        
        <% else %>
        
          <li><%= link_to "Registrarse", new_user_registration_path %></li>
          <li><%= link_to "Ingresar", new_user_session_path %></li>
        
        <% end %>

      </ul>
    </div>

  </div>
</nav>

</header>